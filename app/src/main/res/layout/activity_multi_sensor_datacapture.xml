<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.cyril.sensortagti.MultiSensorDataCaptureActivity">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="Latest Status"
        android:id="@+id/outputTextView"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/showStatusButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Automatic Data Capture Mode"
        android:id="@+id/startAutoButton"
        android:nestedScrollingEnabled="false"
        android:onClick="startAutomaticMode"
        android:layout_below="@+id/configMultiLineText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/stopAutoButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Automatic Data Capture Mode"
        android:id="@+id/stopAutoButton"
        android:nestedScrollingEnabled="false"
        android:onClick="stopAutomaticMode"
        android:layout_below="@+id/startAutoButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Latest Status"
        android:id="@+id/showStatusButton"
        android:nestedScrollingEnabled="false"
        android:onClick="showLatestStatus"
        android:layout_below="@+id/stopAutoButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/outputTextView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/configMultiLineText"
        android:text="Config"
        android:lines="3"
        android:linksClickable="false"
        android:layout_below="@+id/resetButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/resetButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan, Add and Configure SensorTags"
        android:id="@+id/scanButton"
        android:nestedScrollingEnabled="false"
        android:onClick="configureNewDevice"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/stopAutoButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Configuration"
        android:id="@+id/resetButton"
        android:nestedScrollingEnabled="false"
        android:onClick="resetConfiguration"
        android:layout_below="@+id/scanButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
